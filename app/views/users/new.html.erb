<body>
<%= render 'partials/navbar' %>
<h1>Sign Up form</h1>
<%= bootstrap_form_with model: @user, url: users_path, method: :post, local: true do |f| %>
  <div class='container'>
    <div class='form-group'>
      <%= f.text_field :name, label: 'Name', class: 'form-control', placeholder: 'Your name here' %>
    </div>
    <div class='form-group'>
      <%= f.text_field :username, label: 'Username', class: 'form-control', placeholder: 'Your username here' %>
    </div>
    <div class='form-group'>
      <%= f.password_field :password, label: 'Password', class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.select :personality_type, options_for_select([
          ["ISTJ - The Inspector", "ISTJ"],
          ["ISFJ - The Protector", "ISFJ"],
          ["INFJ - The Advocate", "INFJ"],
          ["INTJ - The Architect", "INTJ"],
          ["ISTP - The Craftsman", "ISTP"],
          ["ISFP - The Composer", "ISFP"],
          ["INFP - The Healer", "INFP"],
          ["INTP - The Thinker", "INTP"],
          ["ESTP - The Dynamo", "ESTP"],
          ["ESFP - The Performer", "ESFP"],
          ["ENFP - The Champion", "ENFP"],
          ["ENTP - The Visionary", "ENTP"],
          ["ESTJ - The Supervisor", "ESTJ"],
          ["ESFJ - The Provider", "ESFJ"],
          ["ENFJ - The Teacher", "ENFJ"],
          ["ENTJ - The Commander", "ENTJ"]
        ]), {}, label: 'Personality type', class: 'form-select', 'aria-label': 'Select Personality' %>
    </div>
    <%= f.submit "Create a user and login in", class: "btn btn-primary" %>
  </div>
<% end %>
<%= render 'partials/footer' %>
</body>
<body style="background-color: #1a202c; color: #ffffff; min-height: 100vh; display: flex; flex-direction: column; align-items: center; padding: 16px;">
  <%= render 'partials/navbar' %>
  <h1 style="font-size: 2rem; margin-bottom: 1rem; color: #e3e3e3;">Edit User</h1>
  <%= form_with model: @user, url: user_path(@user), method: :put, local: true do |f| %>
    <div style="width: 100%; max-width: 600px; background-color: #2d3748; padding: 16px; border-radius: 8px; box-sizing: border-box; margin: 0 auto; color: #e3e3e3;">
      <div style="margin-bottom: 1rem;">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, value: @user.name %>
      </div>
      <div style="margin-bottom: 1rem;">
      <%= f.label :username, "Username" %>
        <%= f.text_field :username, value: @user.username %>
      </div>
      <div style="margin-bottom: 1rem;">
      <%= f.label :username, "Password" %>
        <%= f.password_field :password, value: @user.password_digest %>
      </div>
      <div style="margin-bottom: 1rem;">
      <%= f.label :username, "Age" %>
        <%= f.number_field :age, value: @user.age %>
      </div>
      <div style="margin-bottom: 1rem;">
       <%= f.label :username, "Zipcode" %>
        <%= f.number_field :zipcode, value: @user.zipcode %>
      </div>
      <div style="margin-bottom: 1rem;">
      <%= f.label :username, "Personality Type" %>
        <%= f.select :personality_type, options_for_select([
            ["ISTJ - The Inspector", "ISTJ"],
            ["ISFJ - The Protector", "ISFJ"],
            ["INFJ - The Advocate", "INFJ"],
            ["INTJ - The Architect", "INTJ"],
            ["ISTP - The Craftsman", "ISTP"],
            ["ISFP - The Composer", "ISFP"],
            ["INFP - The Healer", "INFP"],
            ["INTP - The Thinker", "INTP"],
            ["ESTP - The Dynamo", "ESTP"],
            ["ESFP - The Performer", "ESFP"],
            ["ENFP - The Champion", "ENFP"],
            ["ENTP - The Visionary", "ENTP"],
            ["ESTJ - The Supervisor", "ESTJ"],
            ["ESFJ - The Provider", "ESFJ"],
            ["ENFJ - The Teacher", "ENFJ"],
            ["ENTJ - The Commander", "ENTJ"]
          ]), {}, 'aria-label': 'Edit Personality', value: @user.personality_type %>
      </div>
      <div style="margin-bottom: 1rem;">
       <%= f.label :username, "Interests (comma-separated)" %>
        <%= f.text_area :interests, value: @user.interests %>
      </div>
      <div style="margin-bottom: 1rem;">
        <%= f.label :is_verified, 'Verification Status' %>
        <%= f.check_box :is_verified,  checked: @user.is_verified %>
      </div>
      <div style="margin-bottom: 1rem;">
      <%= f.label :bio, 'Bio' %>
        <%= f.text_area :bio, value: @user.bio %>
      </div style="margin-bottom: 1rem;">
      <%= f.submit "Update the user details"%>
    </div>
  <% end %>  
  <%= render 'partials/footer' %>
</body>
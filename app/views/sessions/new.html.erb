<body>
  <%= render 'partials/navbar' %>
<h2>Log in</h2>
<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div class='form-group'>
    <%= f.text_field :username, label: 'Username', class: 'form-control', placeholder: 'Your username here' %>
  </div>
  <div class='form-group'>
    <%= f.password_field :password, label: 'Password', class: 'form-control', autocomplete: "username" %>
  </div>
  <%= f.submit "Login in", class: "btn btn-primary" %>
<% end %>
<%= render 'partials/footer' %>
</body>
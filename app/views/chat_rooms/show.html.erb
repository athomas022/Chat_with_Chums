<body>
  <%= render 'partials/navbar' %>
  <%= render 'partials/sidebar', users: @users %>
  <h1>Welcome to <%= @chat_room.name %></h1>
  <div class='container'>
    <div class='chat'>
     <% @chat_room.message_ids.each do |message_id| %>
        <% message = Message.find(message_id) %>
          <div class='messages'>
            <%= render partial: 'messages/message', locals: { message: message } %>
          </div>
     <% end %>
    </div>
    <div class='messages-form'>
      <%= form_with model: [@chat_room, @chat_room.messages.new], method: :post, local: true do |f| %>
        <div class='messages-input'>
          <%= f.text_area :body, placeholder: 'Type your message here' %>
        </div>
        <%= f.submit "Send", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= render 'partials/footer' %>
</body>